{
  "name": "resource_repository",
  "scripts": {
    "postdeploy": "bin/rails db:migrate && bin/rails db:seed"
  },
  "env": {
    "RAILS_ENV": {
      "required": true
    },
    "STATIC_FILE_PATH": {
      "required": true
    },
    "SENTRY_DSN": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_S3_BUCKET": {
      "required": true
    },
    "AWS_S3_REGION": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/DataDog/heroku-buildpack-datadog"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
