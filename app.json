{
  "name": "ncce_curriculum",
  "scripts": {
    "postdeploy": "bin/rails db:migrate && bin/rails db:seed"
  },
  "env": {
    "RAILS_ENV": {
      "required": true,
      "value": "staging"
    },
    "STATIC_FILE_PATH": {
      "required": true,
      "value": "nil"
    },
    "SENTRY_DSN": {
      "required": true,
      "value": "nil"
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true,
      "value": "nil"
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true,
      "value": "nil"
    },
    "AWS_S3_BUCKET": {
      "required": true,
      "value": "nil"
    },
    "AWS_S3_REGION": {
      "required": true,
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-basic"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/DataDog/heroku-buildpack-datadog"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
  "environments": {
    "review" : {
      "env" : {
        "AWS_S3_REGION": {
          "value": "eu-west-1"
        }
      }
    }
  }
}
