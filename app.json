{
  "name": "ncce_curriculum",
  "scripts": {
    "postdeploy": "bin/rails db:migrate && bin/rails db:seed"
  },
  "env": {
    "RAILS_ENV": {
      "required": true,
      "value": "staging"
    },
    "STATIC_FILE_PATH": {
      "required": true,
      "value": "nil"
    },
    "SENTRY_DSN": {
      "required": true,
      "value": "nil"
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true,
      "value": "nil"
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true,
      "value": "nil"
    },
    "AWS_S3_BUCKET": {
      "required": true,
      "value": "ncce-curriculum-staging"
    },
    "AWS_S3_REGION": {
      "required": true,
      "value": "eu-west-1"
    },
    "API_KEY": {
      "required": true,
      "value": "nil"
    },
    "DD_API_KEY": {
      "required": true,
      "value": "nil"
    },
    "DD_LOG_LEVEL": {
      "required": "false",
      "value": "ERROR"
    },
    "TC_API_URL": {
      "required": "true",
      "value": "https://staging.teachcomputing.org"
    },
    "TC_API_SECRET": {
      "required": "true",
      "value": "nil"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql:hobby-basic",
    "heroku-redis:hobby-dev"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/DataDog/heroku-buildpack-datadog"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/metrics"
    }
  ]
}
